<style>
  @keyframes slide-text {
    0% {
      transform: translateX(0);
    }
    50% {
      transform: translateX(-10px);
    }
    100% {
      transform: translateX(0);
    }
  }
  
  .animate-slide-text {
    animation: slide-text 3s ease-in-out infinite;
  }
  
  #promo-banner {
    background-size: 400% 100%;
    animation: gradient-shift 12s ease-in-out infinite;
  }
  
  @keyframes gradient-shift {
    0%, 100% {
      background-position: 0% 50%;
    }
    33% {
      background-position: 50% 50%;
    }
    66% {
      background-position: 100% 50%;
    }
  }
  
  /* Fade out animation */
  #promo-banner.fade-out {
    animation: fadeOut 0.3s ease-out forwards;
  }
  
  @keyframes fadeOut {
    from {
      opacity: 1;
      transform: translateY(0);
    }
    to {
      opacity: 0;
      transform: translateY(-100%);
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const promoBanner = document.getElementById('promo-banner');
    const closeButton = document.getElementById('close-promo');
    
    if (promoBanner && closeButton) {
      // Check if banner was previously closed
      const bannerClosed = localStorage.getItem('promo-banner-closed');
      const today = new Date().toDateString();
      
      if (bannerClosed === today) {
        promoBanner.style.display = 'none';
        return;
      }
      
      // Close banner functionality
      closeButton.addEventListener('click', function() {
        promoBanner.classList.add('fade-out');
        
        setTimeout(() => {
          promoBanner.style.display = 'none';
          // Remember that banner was closed today
          localStorage.setItem('promo-banner-closed', today);
        }, 300);
      });
      
      // Auto-hide after 10 seconds (optional)
      setTimeout(() => {
        if (promoBanner.style.display !== 'none') {
          const autoClose = document.createElement('div');
          autoClose.className = 'text-xs text-white/70 absolute top-0 right-12 pt-1';
          autoClose.textContent = 'Se cerrar√° autom√°ticamente...';
          promoBanner.appendChild(autoClose);
          
          setTimeout(() => {
            if (promoBanner.style.display !== 'none') {
              closeButton.click();
            }
          }, 3000);
        }
      }, 10000);
    }
  });
</script>