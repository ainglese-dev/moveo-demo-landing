---
export interface Props {
  title?: string;
  subtitle?: string;
  formType?: 'booking' | 'contact';
}

const { 
  title = "Agenda tu consulta gratuita",
  subtitle = "Completa el formulario y nos pondremos en contacto contigo en menos de 24 horas.",
  formType = 'booking'
} = Astro.props;

// Google Form integration - Using CORRECT field IDs from working pre-filled URL
const GOOGLE_FORM_ACTION_URL = "https://docs.google.com/forms/d/e/1FAIpQLSdy7Sv9ktJFTfHZAIMrgN4A7d0kaziM9wXmdrzYBMYeiHu9MQ/formResponse";
const FORM_FIELDS = {
  name: "entry.1699377430",
  email: "entry.932699630",
  phone: "entry.925299747", 
  serviceType: "entry.1475595085",
  message: "entry.1992337220", // This was the missing field!
  consent: "entry.1632736675"
};
---

<div class="bg-white dark:bg-gray-800 rounded-xl shadow-lg border border-gray-100 dark:border-gray-700 overflow-hidden transition-colors">
  <div class="bg-gradient-to-r from-moveo-deep-blue to-moveo-bright-blue p-6 text-white">
    <h2 class="text-2xl lg:text-3xl font-heading font-bold mb-2">{title}</h2>
    <p class="text-blue-100">{subtitle}</p>
  </div>

  <form 
    id="booking-form"
    class="p-6 lg:p-8 space-y-6"
    novalidate
  >
    <!-- Personal Information Section -->
    <div class="space-y-4">
      <h3 class="text-lg font-semibold text-moveo-deep-blue dark:text-moveo-yellow mb-4 flex items-center">
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
        </svg>
        Información de contacto
      </h3>
      
      <div>
        <label for="name" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
          Nombre completo <span class="text-red-500">*</span>
        </label>
        <input 
          type="text" 
          id="name"
          name={FORM_FIELDS.name}
          required 
          class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-moveo-bright-blue focus:border-transparent bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100 transition-colors"
          placeholder="Ej: María García López"
        />
      </div>

      <div>
        <label for="email" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
          Correo electrónico <span class="text-red-500">*</span>
        </label>
        <input 
          type="email" 
          id="email"
          name={FORM_FIELDS.email}
          required 
          class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-moveo-bright-blue focus:border-transparent bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100 transition-colors"
          placeholder="ejemplo@email.com"
        />
      </div>
        
      <div>
        <label for="phone" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
          Teléfono/WhatsApp <span class="text-red-500">*</span>
        </label>
        <input 
          type="tel" 
          id="phone"
          name={FORM_FIELDS.phone}
          required 
          class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-moveo-bright-blue focus:border-transparent bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100 transition-colors"
          placeholder="+57 300 123 4567"
        />
      </div>
    </div>

    <!-- Service Information Section -->
    <div class="space-y-4">
      <h3 class="text-lg font-semibold text-moveo-deep-blue dark:text-moveo-yellow mb-4 flex items-center">
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
        </svg>
        Servicio de interés
      </h3>

      <div>
        <label for="serviceType" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
          ¿Qué tipo de servicio te interesa? <span class="text-red-500">*</span>
        </label>
        <select 
          id="serviceType"
          name={FORM_FIELDS.serviceType}
          required 
          class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-moveo-bright-blue focus:border-transparent bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100 transition-colors"
        >
          <option value="">Seleccionar servicio</option>
          <option value="evaluacion-gratuita">Evaluación gratuita inicial</option>
          <option value="clases-grupales">Clases presenciales grupales</option>
          <option value="clases-domicilio">Clases a domicilio</option>
          <option value="programa-personalizado">Programa personalizado</option>
          <option value="consulta-familiar">Consulta para familiar</option>
          <option value="solo-informacion">Solo información general</option>
        </select>
      </div>
    </div>

    <!-- Message Section -->
    <div class="space-y-4">
      <h3 class="text-lg font-semibold text-moveo-deep-blue dark:text-moveo-yellow mb-4 flex items-center">
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
        </svg>
        Mensaje adicional
      </h3>

      <div>
        <label for="message" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
          Cuéntanos más sobre tu situación o pregúntanos lo que necesites
        </label>
        <textarea 
          id="message"
          name={FORM_FIELDS.message}
          rows="4"
          class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-moveo-bright-blue focus:border-transparent bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100 transition-colors"
          placeholder="Ej: Mi madre de 75 años necesita mejorar su equilibrio después de una caída..."
        ></textarea>
      </div>
    </div>

    <!-- Consent Section -->
    <div class="bg-gray-50 dark:bg-gray-700 p-4 rounded-lg">
      <div class="flex items-start space-x-3">
        <input 
          type="checkbox" 
          id="consent"
          name={FORM_FIELDS.consent}
          required
          value="acepto-politica-privacidad"
          class="mt-1 h-4 w-4 text-moveo-bright-blue focus:ring-moveo-bright-blue border-gray-300 rounded"
        />
        <label for="consent" class="text-sm text-gray-700 dark:text-gray-300">
          <span class="text-red-500">*</span> Acepto que MOVEO use mis datos de contacto para responder a mi solicitud. 
          He leído y acepto la <a href="/legal" class="text-moveo-bright-blue hover:underline">política de privacidad</a>.
        </label>
      </div>
    </div>

    <!-- Submit Button -->
    <div class="pt-4">
      <button 
        type="submit"
        class="w-full bg-gradient-to-r from-moveo-deep-blue to-moveo-bright-blue text-white py-4 px-6 rounded-lg font-semibold text-lg hover:from-blue-800 hover:to-blue-600 focus:ring-4 focus:ring-blue-300 disabled:opacity-50 disabled:cursor-not-allowed transition-all duration-300 transform hover:scale-[1.02]"
      >
        <span class="flex items-center justify-center">
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8" />
          </svg>
          Enviar solicitud
        </span>
      </button>
    </div>

    <p class="text-xs text-gray-500 dark:text-gray-400 text-center">
      Nos pondremos en contacto contigo en menos de 24 horas • Los campos marcados con * son obligatorios
    </p>
  </form>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const form = document.getElementById('booking-form');
    
    if (form) {
      form.addEventListener('submit', async function(e) {
        e.preventDefault();
        
        // Basic validation
        const requiredFields = form.querySelectorAll('[required]');
        let isValid = true;
        
        requiredFields.forEach(field => {
          if (!field.value.trim()) {
            field.classList.add('border-red-500');
            isValid = false;
          } else {
            field.classList.remove('border-red-500');
          }
        });
        
        if (!isValid) {
          alert('Por favor completa todos los campos obligatorios.');
          return;
        }
        
        // Show loading state
        const submitButton = form.querySelector('button[type="submit"]');
        if (submitButton) {
          submitButton.disabled = true;
          submitButton.innerHTML = `
            <span class="flex items-center justify-center">
              <svg class="animate-spin -ml-1 mr-2 h-5 w-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
              </svg>
              Enviando...
            </span>
          `;
        }
        
        try {
          // Collect form data with clean values
          const formData = new Map();
          
          // Get form values with clean, URL-safe encoding
          const name = form.querySelector('#name')?.value?.trim() || '';
          const email = form.querySelector('#email')?.value?.trim() || '';
          const phone = form.querySelector('#phone')?.value?.trim() || '';
          const serviceType = form.querySelector('#serviceType')?.value || '';
          const message = form.querySelector('#message')?.value?.trim() || '';
          const consent = form.querySelector('#consent')?.checked;
          
          // Add data to map if not empty - using CORRECT field IDs from working URL
          if (name) formData.set('entry.1699377430', name);
          if (email) formData.set('entry.932699630', email);
          if (phone) formData.set('entry.925299747', phone);
          if (serviceType) formData.set('entry.1475595085', serviceType);
          if (message) formData.set('entry.1992337220', message);
          if (consent) formData.set('entry.1632736675', 'acepto-politica-privacidad');
          
          // Build submission URL with proper encoding
          const baseUrl = 'https://docs.google.com/forms/d/e/1FAIpQLSdy7Sv9ktJFTfHZAIMrgN4A7d0kaziM9wXmdrzYBMYeiHu9MQ/formResponse';
          const queryParams = [];
          
          formData.forEach((value, key) => {
            // Use the same encoding as the working pre-filled URL (spaces to +)
            const cleanValue = encodeURIComponent(value).replace(/%20/g, '+');
            queryParams.push(`${key}=${cleanValue}`);
          });
          
          const fullUrl = `${baseUrl}?${queryParams.join('&')}`;
          
          // Method 1: Try direct GET request (exactly like clicking a pre-filled URL)
          try {
            const response = await fetch(fullUrl, {
              method: 'GET',
              mode: 'no-cors',
              credentials: 'omit'
            });
            
            // Wait a moment to ensure the request is processed
            await new Promise(resolve => setTimeout(resolve, 1000));
            showSuccessMessage();
            
          } catch (fetchError) {
            // Method 2: Try hidden iframe submission (traditional form method)
            try {
              const iframe = document.createElement('iframe');
              iframe.name = 'hidden_iframe';
              iframe.style.display = 'none';
              document.body.appendChild(iframe);
              
              // Create a temporary form that submits to the iframe
              const tempForm = document.createElement('form');
              tempForm.target = 'hidden_iframe';
              tempForm.method = 'GET';
              tempForm.action = baseUrl;
              
              // Add all form data as hidden inputs
              formData.forEach((value, name) => {
                const input = document.createElement('input');
                input.type = 'hidden';
                input.name = name;
                input.value = value;
                tempForm.appendChild(input);
              });
              
              document.body.appendChild(tempForm);
              tempForm.submit();
              
              // Clean up
              setTimeout(() => {
                document.body.removeChild(iframe);
                document.body.removeChild(tempForm);
              }, 2000);
              
              showSuccessMessage();
              
            } catch (iframeError) {
              // Final fallback: Open the pre-filled URL in new tab
              const viewFormUrl = fullUrl.replace('/formResponse', '/viewform');
              window.open(viewFormUrl, '_blank');
              showSuccessMessage();
            }
          }
          
        } catch (error) {
          console.error('Form submission failed:', error);
          
          alert('Hubo un problema al enviar el formulario. Por favor intenta nuevamente o contáctanos por WhatsApp.');
          
          // Reset button
          if (submitButton) {
            submitButton.disabled = false;
            submitButton.innerHTML = `
              <span class="flex items-center justify-center">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8" />
                </svg>
                Enviar solicitud
              </span>
            `;
          }
        }
      });
    }
  });

  function showSuccessMessage(method = 'Google') {
    const form = document.getElementById('booking-form');
    if (!form) return;
    
    const successMessage = method === 'WhatsApp' 
      ? 'Se ha abierto WhatsApp con tu información. Te responderemos muy pronto.'
      : 'Gracias por tu interés en MOVEO. Nos pondremos en contacto contigo en menos de 24 horas.';
    
    form.innerHTML = `
      <div class="text-center py-12">
        <div class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-4">
          <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
          </svg>
        </div>
        <h3 class="text-xl font-semibold text-moveo-deep-blue dark:text-moveo-yellow mb-2">¡Solicitud enviada exitosamente!</h3>
        <p class="text-gray-600 dark:text-gray-300 mb-4">
          ${successMessage}
        </p>
        <div class="bg-blue-50 dark:bg-blue-900/20 p-4 rounded-lg mb-6">
          <p class="text-sm text-blue-800 dark:text-blue-200">
            <strong>¿Necesitas una respuesta más rápida?</strong><br>
            Escríbenos directamente por WhatsApp para atención inmediata.
          </p>
        </div>
        <a 
          href="https://wa.me/573142265559?text=Hola,%20acabo%20de%20enviar%20un%20formulario%20y%20me%20gustaría%20una%20respuesta%20rápida"
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center bg-green-500 hover:bg-green-600 text-white px-6 py-3 rounded-lg font-semibold transition-colors"
        >
          <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
            <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893A11.821 11.821 0 0020.885 3.587z"/>
          </svg>
          Contactar por WhatsApp
        </a>
      </div>
    `;
  }
</script>