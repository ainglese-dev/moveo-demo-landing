          <!-- Team Member 2 -->
          <div class="bg-white dark:bg-gray-700 rounded-xl shadow-lg overflow-hidden transition-colors group hover:shadow-xl">
            <div class="aspect-square bg-gradient-to-br from-moveo-purple to-moveo-accent-blue">
              <div class="flex items-center justify-center">
                <svg class="w-24 h-24 text-white opacity-80" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd" />
                </svg>
              </div>
            </div>
            <div class="p-6">
              <h3 class="text-xl font-heading font-bold text-moveo-deep-blue dark:text-moveo-yellow mb-2">
